root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{json,jsonnet,libsonnet,yml,yaml}]
indent_size = 2

[*.{html,xml}]
indent_size = 2

[*.{js,jsx,ts,tsx}]
indent_size = 2

[*.{css,scss}]
indent_size = 2

[*.{md,markdown}]

[*.tsv]
indent_style = tab

[Makefile]
indent_style = tab
